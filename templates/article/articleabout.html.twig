{% if  (null != articles)%}
    {% for article in articles %}
        <div>
            <i class="ion-quote"></i>
            <p> {{ article.libelle }} "</p>
            <div class="user">
            {% if (null != article.lienimage) %}
                <img src={{article.lienimage ? article.lienimage : "" }} alt="photo de l'article">
            {% endif %}
            <p><span> {{ article.auteur }} </span> {{ article.titre }} </p>
            </div>
        </div>
    {% endfor %}
{% else %}
    <p> Il n'y a aucun article relatif à ce mot clé</p>
{% endif %}