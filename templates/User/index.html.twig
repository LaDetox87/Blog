{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Mdp</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for User in Users %}
            <tr>
                <td>{{ User.id }}</td>
                <td>{{ User.pseudo }}</td>
                <td>{{ User.nom }}</td>
                <td>{{ User.mdp }}</td>
                <td>{{ User.mail }}</td>
                <td>
                    <a href="{{ path('app_User_show', {'id': User.id}) }}">show</a>
                    <a href="{{ path('app_User_edit', {'id': User.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_User_new') }}">Create new</a>
{% endblock %}
